{% extends 'security/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<!-- Navigation -->
<nav class="navbar navbar-light bg-light static-top">
  <div class="container">
    <a class="navbar-brand" href="{{ path('proyecto') }}">¿Qué es Sueño Dorado?</a>
    <a class="btn btn-warning" href="{{ path('app_login') }}">Iniciar sesion</a>
  </div>
</nav>
<header class="masthead text-white text-center">
<br>
<div  class="overlay"></div>
    <div class="container">
        <div class="row align-items-center">

          <div class="col-md-6 col-lg-6 col-xl-6 mx-auto">
              <h1>Registro</h1>
              {{ form_start(form) }}
              <br>
              {{ form_row(form.email) }}
              <br>
              {{ form_row(form.nombre) }}
              <br>
              {{ form_row(form.telmovil) }}
              <br>
              {{ form_row(form.pais) }}
              <br>
              {{ form_row(form.ciudad) }}
              <br>
              {{ form_row(form.plainPassword.first) }}
              {{ form_row(form.plainPassword.second) }}
              <br>
              <button class="btn btn-warning" type="submit">Registrarse</button>
              {{ form_end(form) }}
          </div>
          <div class="col-md-6 col-lg-6 col-xl-6 mx-auto">
            <br>
            <br>
    
            <img src="{{ asset('assets/logo.png') }}" class="img-fluid pull-xs-left" alt="..." width="100%" height="20%">
          </div>
        </div>

        <br>
    </div>
</header>
<footer class="footer bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
        <ul class="list-inline mb-2">
          <li class="list-inline-item">
            <a href="#">Contacto</a>
          </li>
        </ul>

      </div>
      <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
        <ul class="list-inline mb-0">
          <li class="list-inline-item mr-3">
            <a href="#">
              <i class="fab fa-facebook fa-2x fa-fw"></i>
            </a>
          </li>
          <li class="list-inline-item mr-3">
            <a href="#">
              <i class="fab fa-twitter-square fa-2x fa-fw"></i>
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#">
              <i class="fab fa-instagram fa-2x fa-fw"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

{% endblock %}
