{% extends 'layouts/admin.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div  class="container-fluid">
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-table"></i>
      Usuarios</div>
    <div style="z-index:0;" class="card-body">
        <table class=" table nowrap dt-responsive responsive" id="Usuarios" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th width="3%">Id</th>
              <th>Nombre</th>
              <th width="10%">Teléfono movil</th>
              <th width="10%">País y Ciudad</th>
              <th width="20%"></th>
              <th width="20%"></th>
            </tr>
          </thead>
          <tfoot>
          </tfoot>
          <tbody>
          </tbody>
        </table>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
$(document).ready(function() {
        usersList();
    });

function usersList() {

  fetch('{{ path('list_Users') }}',{method: 'GET'})
    .then(response => response.json())
    .then(myJson => {
        var table = $('#Usuarios').DataTable({
        language: {
             "decimal": "",
             "emptyTable": "No hay información",
             "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
             "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
             "infoFiltered": "(Filtrado de _MAX_ total entradas)",
             "infoPostFix": "",
             "thousands": ",",
             "lengthMenu": "Mostrar _MENU_ Entradas",
             "loadingRecords": "Cargando...",
             "processing": "Procesando...",
             "search": "Buscar:",
             "zeroRecords": "Sin resultados encontrados",
             "paginate": {
                 "first": "Primero",
                 "last": "Ultimo",
                 "next": "Siguiente",
                 "previous": "Anterior"
             }
        },
        columns: [
            null,
            { "orderable": false },
            { "orderable": false },
            { "orderable": false },
            { "orderable": false },
            { "orderable": false }
        ],
        responsive: true,
        rowReorder: {
            selector: 'td:nth-child(2)'
        },
        destroy: true,
        });

     table.clear();
    for (var i = 0; i < myJson[0].length; i++) {
        var id = myJson[0][i].id
        var x = "modalBorrar("+id+")";
        var uri = "{{ path('user_list_monedas',{'id': 'id'} )}}";
        uri = uri.replace('id', id);
        var botonList = `<a class='botonAcccion btn btn-success' href='${uri}'><span class='hidden-xs'>Estructuras</span></a>`;
        uri = "{{ path('edit_user',{'id': 'id'} )}}";
        uri = uri.replace('id', id);
        var botonEdit = `<a class='botonAcccion btn btn-warning' href='${uri}'><span class='hidden-xs'>Editar</span></a>`;

        var paisCiudad = "" + myJson[0][i].pais + " - "+ myJson[0][i].ciudad;
        var nombreCompleto = "" + myJson[0][i].nombres + " " + myJson[0][i].apellidos;
        table.row.add([
            myJson[0][i].id,
            nombreCompleto,
            myJson[0][i].telmovil,
            paisCiudad,
            botonList,
            botonEdit,
        ]);
     }
     table.draw();
    })
    .catch(function(err) {
       console.log(err);

    });
}
</script>

{% endblock %}
