<script type="text/javascript">
var arbol = new Array();
$(document).ready(function() {
        usersList();
    });
function usersList() {
    arbol = [];
    console.log(arbol);
  fetch('{{ path('list_monedas',{'id': moneda.id} )}}',{method: 'GET'})
    .then(response => response.json())
    .then(myJson => {
        var table = $('#Monedas').DataTable({
        "order": [[ 0, 'desc' ]],
        "pageLength": 15,
         "destroy": true,
         rowCallback:function(row,data)
         {
           switch (data[3]) {
               case "Diamante":
                    $($(row).find("td")[3]).css("background-color","#6CAFFB");
                   break;
               case "Esmeralda":
                    $($(row).find("td")[3]).css("background-color","#6EED91");
                   break;
               case "Rubi":
                    $($(row).find("td")[3]).css("background-color","#F36F6F");
                   break;
               case "Oro":
                    $($(row).find("td")[3]).css("background-color","#D4B678");
                   break;
           }
         }
        });
     table.clear();
     // console.log(myJson);
     for (var i = 0; i < myJson.length; i++) {
         if (myJson[i].length > 1) {
             if (myJson[i].length == 2) {
                 var invto = "" + myJson[i][1].dueño.nombre;
             } else if (myJson[i].length == 3) {
                 var invto = "" + myJson[i][1].dueño.nombre + " y " + myJson[i][2].dueño.nombre;
             }
         }else {
             invto = "";
         }
         var rango = "";
         var estado = "";
         switch (myJson[i][0]['Padre'].rango) {
            case 0:
                rango = "Oro";
                var estado = "No";
                break;
            case 1:
            var x = "modalAñadir("+myJson[i][0]['Padre'].id+")";
                var boton = `<button type='button' style='width:100%; height:100% id='ButtonEditar' onclick='${x}' class='btn btn-danger'><span class='hidden-xs'>Rubi</span></button>`;
                rango = boton;
                estado = "Si"
                break;
            case 2:
                rango = "Esmeralda";
                estado = "Si"
                break;
            case 3:
                rango = "Diamante";
                estado = "Si"
                break;
         }
         table.row.add([
             myJson[i][0]['Padre'].rango,
             myJson[i][0]['Padre'].dueño.nombre,
             invto,
             rango,
             estado
         ]);
         arbol.push(myJson[i][0]['Padre']);
     }
     table.draw();
    })
    .catch(function(err) {
       console.log(err);

    });
}


function editInvitado(id)
{
    var uri  = "{{ path('edit_invitados_moneda',{'id': 'id'} )}}"
    uri = uri.replace('id', id);
    const data = new FormData(document.getElementById('fromEditinvitados'));
    fetch(uri,{method: 'POST',body: data})
        .catch(function(err) {
           console.log(err);
       });

    location.reload(true);

}


function modalAñadir(id)
{
    $("#añadir_oro").val([]);
    var x = "editInvitado("+id+")";
    $('#botonEditInvitados').attr('onclick', `${x}`);
    fetch('{{ path('list_all_monedas',{'id': moneda.id} )}}',{method: 'GET'})
        .then(response => response.json())
        .then(myJson => {
            myJson.forEach(function(monedaG){
                var coincidencia = arbol.find(moneda => moneda.id == monedaG.id);
                if (coincidencia == null) {
                    var newOption = new Option(monedaG.dueño.nombre, monedaG.id, false, false);
                    $('#añadir_oro').append(newOption).trigger('change');
                }
            });
        })
        .catch(function(err) {
           console.log(err);
       });

    var uri  = "{{ path('user_find_invitados',{'id': 'id'} )}}"
    uri = uri.replace('id', id);
    fetch(uri,{method: 'GET'})
        .then(response => response.json())
        .then(myJson => {
            myJson.forEach(function(monedaG){
                var newOption = new Option(monedaG.dueño.nombre, monedaG.id, false, true);
                $('#añadir_oro').append(newOption).trigger('change');
            });
        })
        .catch(function(err) {
           console.log(err);
       });
    var search = $('#añadir_oro').select2({ maximumSelectionLength: 2 });
    $('#agregarOro').modal('show');

}

function modalBorrar(id)
{
    var uri  = "{{ path('delete_moneda',{'id': 'id'} )}}"
    uri = uri.replace('id', id);
    var content = `<button class='btn btn-secondary' type='button' data-dismiss='modal'>Cancel</button>
        <a class='btn btn-primary' href='${uri}'>Borrar</a>`;
    document.getElementById("BotonBorrar").innerHTML = content;
    $('#borrarModal').modal('show');
}
</script>

