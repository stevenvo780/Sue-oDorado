{% extends 'layouts/admin.html.twig' %}

{% block title %}Eventos{% endblock %}

{% block body %}
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-table"></i>
      Eventos
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="Eventos" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Fecha</th>
              <th>Descipción</th>
              <th>Inicia a las</th>
              <th>Finaliza a las</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tfoot>
          </tfoot>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
</div>
<a class='btn btn-success' href='{{path('new_evento')}}'>Crear evento</a>
{% endblock %}
{% block modal %}
    <div class="modal fade" id="borrarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¿Seguro que desea borrar el evento?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                        </button>
                </div>
                <div id="BotonBorrar" class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="">Borrar</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
$(document).ready(function() {
        usersList();
        console.log("Docuemnto listo");
    });

function usersList() {

    var misCabeceras = new Headers();
    var miInit = { method: 'POST',
           headers: misCabeceras,
           mode: 'cors',
           cache: 'default' };
  fetch('{{ path('list_evento_admin') }}',miInit)
    .then(response => response.json())
    .then(myJson => {
        var table = $('#Eventos').DataTable({
         "order": [[ 1, 'desc' ]],
         "destroy": true,
        });
     table.clear();
    var options = { year: 'numeric', month: 'long', day: 'numeric' };
    for (var i = 0; i < myJson.length; i++) {
        var id = myJson[i].id
        var x = "modalBorrar("+id+")";
        var uri = "{{ path('edit_evento',{'id': 'id'} )}}";
        uri = uri.replace('id', id);
        var boton = `<a class='btn btn-success' href='${uri}'>Editar</a> &nbsp; &nbsp; </span><button type='button' id='ButtonEditar' onclick='${x}' class='btn btn-danger'><span class='hidden-xs'>Borrar</span></button>`;
        table.row.add([
            myJson[i].nombre,
            myJson[i].fecha,
            myJson[i].descripcion,
            myJson[i].duracionInicio,
            myJson[i].duracionFin,
            boton,
        ]);
     }
     table.draw();
    })
    .catch(function(err) {
       console.log(err);

    });
}

function modalBorrar(id)
{
    var uri  = "{{ path('delete_evento',{'id': 'id'} )}}"
    uri = uri.replace('id', id);
    var content = `<button class='btn btn-secondary' type='button' data-dismiss='modal'>Cancel</button>
        <a class='btn btn-primary' href='${uri}'>Borrar</a>`;
    document.getElementById("BotonBorrar").innerHTML = content;
    $('#borrarModal').modal('show');
}

function deleteUser(id)
{
    var uri  = "{{ path('delete_evento',{'id': 'id'} )}}"
    uri = uri.replace('id', id);
    fetch(uri, {
            method: 'POST',
        })
    .then(response => {
        console.log(response);
    })
    .catch((error) => console.log(error));

}

</script>

{% endblock %}
