          </div>
          <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            <a class="btn btn-primary" href="{{path('app_logout')}}">Cerrar sesion</a>
          </div>
        </div>
    </div>
</div>

<div class="modal fade" id="borrarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">¿Seguro que desea borrar el usuario?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div id="BotonBorrar" class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <a class="btn btn-primary" href="">Borrar</a>
      </div>
    </div>
</div>
</div>
</div>

{% endblock %}
{% block javascripts %}
{{ parent() }}

<script type="text/javascript">
console.log("cy");
var cy = cytoscape({
  container: document.getElementById('cy'),
  boxSelectionEnabled: false,
  autounselectify: true,

  style: cytoscape.stylesheet()
    .selector('node')
      .style({
        'background-color': 'data(color)',
        'content': 'data(name)',
        'weight': 0.1,
      })
    .selector('edge')
      .style({
        'curve-style': 'bezier',
        'target-arrow-shape': 'triangle',
        'width': 2,
        'padding': '20px',
        'line-color': '#ddd',
        'target-arrow-color': '#ddd'
      }),

  elements: {
      nodes: [
          {% for moneda in monedas %}
            { data: { id: '{{moneda.id}}', name: '{{moneda.dueño.nombre}}', color: {% if moneda.rango == 0 %} '#D4B678' {% elseif moneda.rango == 1 %} '#F36F6F' {% elseif moneda.rango == 2 %} '#6EED91' {% elseif moneda.rango == 3 %}'#6CAFFB'{% endif %}}},
          {% endfor %}
      ],
      edges: [

          {% for moneda in monedas %}
              {% for monedaMoneda in monedaMonedas  %}
                  {% if monedaMoneda.monedaPropietario.id == moneda.id %}
                  { data: { id: '{{moneda.id}}-{{monedaMoneda.monedaInvitado.id}}', source: '{{moneda.id}}', target: '{{monedaMoneda.monedaInvitado.id}}' } },
                  {% endif %}
              {% endfor %}
          {% endfor %}
      ]
    },
  layout: {
    name: 'cose',
    padding: 100,
    idealEdgeLength: function( edge ){ return 50; },
    edgeElasticity: function( edge ){ return 100; },
    nodeRepulsion: function( node ){ return 2048; },
  }
});
</script>

{% endblock %}
