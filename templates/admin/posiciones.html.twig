{% extends 'layouts/admin.html.twig' %}

{% block title %}Estructura{% endblock %}

{% block body %}
<div class="container-fluid">
  <div style="height: 80%; width: 80%; position: absolute; left: 10; top: 10;" id="cy"></div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}

<script type="text/javascript">
console.log(0);
var cy = cytoscape({
  container: document.getElementById('cy'),

  boxSelectionEnabled: false,
  autounselectify: true,

  style: cytoscape.stylesheet()
    .selector('node')
      .style({
        'background-color': 'data(color)',
        'content': 'data(name)',
        'weight': 1,
      })
    .selector('edge')
      .style({
        'curve-style': 'bezier',
        'target-arrow-shape': 'triangle',
        'width': 1,
        'line-color': '#ddd',
        'target-arrow-color': '#ddd'
      }),

  elements: {
      nodes: [
          {% for moneda in monedas %}
            { data: { id: '{{moneda.id}}', name: '{{moneda.due√±o.nombres}}', color: {% if moneda.rango == 0 %} '#D4B678' {% elseif moneda.rango == 1 %}
             '#F36F6F' {% elseif moneda.rango == 2 %} '#6EED91' {% elseif moneda.rango == 3 %}'#6CAFFB' {% elseif moneda.rango == 4 %} '#91c2f7' {% endif %}}},
          {% endfor %}
      ],
      edges: [

          {% for moneda in monedas %}
              {% for monedaMoneda in monedaMonedas  %}
                  {% if monedaMoneda.monedaPropietario.id == moneda.id %}
                  { data: { id: '{{moneda.id}}-{{monedaMoneda.monedaInvitado.id}}', source: '{{moneda.id}}', target: '{{monedaMoneda.monedaInvitado.id}}' } },
                  {% endif %}
              {% endfor %}
          {% endfor %}
      ]
    },
  layout: {
    name: 'cose',
    padding: 100,
    idealEdgeLength: function( edge ){ return 50; },
    edgeElasticity: function( edge ){ return 100; },
    nodeRepulsion: function( node ){ return 2048; },
  }
});
cy.bind('click', 'node', function(evt) {
    var uri = "{{ path('user_list_posicion',{'id': 'id'} )}}";
    uri = uri.replace('id', evt.target.id());
    location.href=uri;
  console.log('node clicked: ', evt.target.id());
});
</script>

{% endblock %}
