<script type="text/javascript">
window.onload = function() {
     usersList();
};

function usersList() {

  fetch('{{ path('list_mensaje') }}',{ method: 'GET'})
    .then(response => response.json())
    .then(myJson => {
       console.log(myJson);
       
        var table = $('#mensajes').DataTable({
            "dom": '<"pull-left"f><"pull-right"l>tip',
            "paging":   false,
            "ordering": false,
            "info":     false,
            "language": {
                 "decimal": "",
                 "emptyTable": "No hay informaci√≥n",
                 "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                 "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                 "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                 "infoPostFix": "",
                 "thousands": ",",
                 "lengthMenu": "Mostrar _MENU_ Entradas",
                 "loadingRecords": "Cargando...",
                 "processing": "Procesando...",
                 "search": "Buscar:",
                 "zeroRecords": "Sin resultados encontrados",
                 "paginate": {
                     "first": "Primero",
                     "last": "Ultimo",
                     "next": "Siguiente",
                     "previous": "Anterior"
                 }
            },
            "responsive": true,
            "order": [[ 0, 'desc' ]],
            "destroy": true,
        });
     table.clear();
    
     for (var i = 0; i < myJson.length; i++) {
     
        var perfil =  `<div onclick='cambiarChat(${myJson[i].idUser})' class='chat_list'>
                            <div class='chat_people'>
                                <div class="chat_ib">
                                <h5> ${myJson[i].nombres} <span class='chat_date'>${myJson[i].fecha}</span></h5>
                                </div>
                            </div>
                        </div>`;
        table.row.add([
            myJson[i].mensajes,
            perfil,
        ]);
     }
     
     table.draw();
    })
    .catch(function(err) {
       console.log(err);

    });
}

function modalBorrar(id)
{
    var uri  = "{{ path('delete_evento',{'id': 'id'}) }}"
    uri = uri.replace('id', id);
    var content = `<button class='btn btn-secondary' type='button' data-dismiss='modal'>Cancel</button>
        <a class='btn btn-primary' href='${uri}'>Borrar</a>`;
    document.getElementById("BotonBorrar").innerHTML = content;
    $('#borrarModal').modal('show');
}

function cambiarChat(id)
{
    let idUser = {{ app.user.id }};
    let data = {de: idUser, para: id };

    var uri  = '{{ path('list_chat') }}'
    $.ajax({
        url : uri,
        data : data,
        method : 'post', 
        success : function(response){
            document.getElementById("mesgs").innerHTML = "";
            var data = JSON.parse(response);
            console.log(data)
            for(i = 0; i < data.length; i++) {

              let para =  ` <div class="incoming_msg">
                              <div class="received_msg">
                                <div class="received_withd_msg">
                                  <p>${data[i].mensaje}</p>
                                  <span class="time_date">${data[i].fecha}</span></div>
                              </div>
                            </div>`;

              let de =  ` <div  class='outgoing_msg'>
                                 <div class='sent_msg'>
                                    <p>${data[i].mensaje}</p>
                                    <span class='time_date'> ${data[i].fecha} </span>
                                 </div>
                             </div> `;

              if(data[i].deOrPara) {
                var content = de;
              } else {
                 var content = para;
                 localStorage.setItem("chatCon", data[i].user);
              }
              
            $(content).appendTo('#mesgs');   
            }
            
            $("#mesgs").animate({ scrollTop: $('#mesgs').prop("scrollHeight")}, 1000);
            
        },
        error: function(error){
            alert("No funciona");
        }
    });
}

function send()
{
    var userId = {{ app.user.id }}
    var mensaje=document.getElementById("mensaje").value;
    var para = localStorage.getItem("chatCon");
    let data = {mensaje: mensaje, de: userId, para: para};

    var uri  = '{{ path('list_mensaje_new') }}'
    console.log(data);
    $.ajax({
        url : uri,
        data : data,
        method : 'post', 
        success : function(response){
            var data = JSON.parse(response);
            console.log(data)
            let de =  ` <div  class='outgoing_msg'>
                                 <div class='sent_msg'>
                                    <p>${data['mensaje']}</p>
                                    <span class='time_date'> ${data['fecha']} </span>
                                 </div>
                             </div> `;
            $(de).appendTo('#mesgs');
            $("#mesgs").animate({ scrollTop: $('#mesgs').prop("scrollHeight")}, 1000);
        },
        error: function(error){
            alert("No funciona");
        }
    });
}
 

</script>

